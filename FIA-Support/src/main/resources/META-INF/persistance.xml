<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="fiasupportPU" transaction-type="RESOURCE_LOCAL">

    <!-- Entidades (solo @Entity; no hace falta registrar @Embeddable) -->
    <class>modelo.dominio.Carrera</class>
    <class>modelo.dominio.Empleado</class>
    <class>modelo.dominio.Estado</class>
    <class>modelo.dominio.Facultad</class>
    <class>modelo.dominio.Historial</class>
    <class>modelo.dominio.Ticket</class>
    <class>modelo.dominio.TicketAsignacionHistorial</class>
    <class>modelo.dominio.TicketCategoriaHistorial</class>
    <class>modelo.dominio.TicketMetricasDiarias</class>
    <class>modelo.dominio.UsuarioFinal</class>
    <class>modelo.dominio.Administrador</class>

    <properties>
      <!-- JDBC -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/fiasupport"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="admin"/>

      <!-- Dialecto -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

      <!-- Opcionales (dev) -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <!-- Valida el schema existente (recomendado con BD ya creada) -->
      <property name="hibernate.hbm2ddl.auto" value="validate"/>

      <!-- Si tus timestamps son con zona (OffsetDateTime), Hibernate 6 ya los maneja -->
      <!-- <property name="hibernate.jdbc.time_zone" value="UTC"/>  --> <!-- opcional -->
    </properties>
  </persistence-unit>
</persistence>
